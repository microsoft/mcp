{
    // Generally, AZURE_MCP_COLLECT_TELEMETRY will be set as an environment variable.
    // For Development purposes, we never want to publish telemetry so it is explicitly
    // set here.
    "AZURE_MCP_COLLECT_TELEMETRY": "false",
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "Console": {
            "LogToStandardErrorThreshold": "Debug",
            "FormatterName": "simple",
            "FormatterOptions": {
                "ColorBehavior": "Disabled",
                "SingleLine": true,
                "TimestampFormat": "[HH:mm:ss] ",
                "UseUtcTimestamp": true
            },
            "LogLevel": {
                "Azure.Mcp.Core.Commands.CommandFactory": "Information"
            }
        }
    }
}
